<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.HBox"
         alignment="BOTTOM_RIGHT"
         spacing="10.0"
         xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/ChatRoomStyle.css">
    <children>
        <Label fx:id="time"
               styleClass="time"/>
        <Label fx:id="message"
               alignment="CENTER"
               maxWidth="400.0"
               styleClass="text_me"
               wrapText="true">
            <padding>
                <Insets left="10.0"
                        right="10.0"
                        bottom="5.0"
                        top="5.0"/>
            </padding>
        </Label>
    </children>
</fx:root>
